<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <!-- Page title -->
        <title>{% block title %}SurveY{% endblock %}</title>

        <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
        <!--<link rel="shortcut icon" type="image/ico" href="favicon.ico') }}" />-->

        <!-- Vendor styles -->
        <link rel="stylesheet" href="{{ asset('bundles/company/vendor/fontawesome/css/font-awesome.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/company/vendor/metisMenu/dist/metisMenu.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/company/vendor/animate.css/animate.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/company/vendor/bootstrap/dist/css/bootstrap.css') }}" />

        <!-- App styles -->
        <link rel="stylesheet" href="{{ asset('bundles/company/fonts/pe-icon-7-stroke/css/pe-icon-7-stroke.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/company/fonts/pe-icon-7-stroke/css/helper.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/company/styles/style.css') }}" />

        <!-- Page styles -->
    {% block css %}{% endblock %}

</head>
<body class="fixed-navbar fixed-sidebar">
    <!-- Header -->
    <div id="header">
        <div class="color-line">
        </div>
        <div id="logo" class="light-version">
            <span>
                SurveY
            </span>
        </div>
        <nav role="navigation">
            <div class="header-link hide-menu"><i class="fa fa-bars"></i></div>

            <div class="navbar-right">
                <ul class="nav navbar-nav no-borders">
                    <li>
                        <a href="#">
                            <i class="pe-7s-upload pe-7s-config text-success "></i>
                        </a>
                    </li>
                    <li class="dropdown">
                        <a href="{{ path('fos_user_security_logout') }}">
                            <i class="pe-7s-upload pe-rotate-90 text-danger"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <!-- Navigation -->
    <aside id="menu">
        <div id="navigation">
            <div class="profile-picture">
                <a href="#">
                    <img src="{{ asset('bundles/company/upload/user_images/' ~ app.user.id ~ app.user.image) }}" class="img-circle  img-responsive" alt="logo">
                </a>

                <div class="stats-label text-color">
                    <br /><span class="font-extra-bold font-uppercase">{{ app.user.firstName }} {{ app.user.lastName }}</span>
                </div>
            </div>

            <ul class="nav" id="side-menu">
                <li class="">
                    <a href="{{path('company_homepage')}}"> <span class="nav-label">Accueil</span></a>
                </li>
                <li class="">
                    <a href="{{path('company_homepage')}}"> <span class="nav-label">Mes Sondages</span></a>
                </li>
                <li class="">
                    <a href="{{path('company_survey_add')}}"> <span class="nav-label">Nouveau Sondage</span></a>
                </li>
            </ul>
        </div>
    </aside>

    <!-- Main Wrapper -->
    <div id="wrapper">
        {% block body %}
        {% endblock %}
        
         <!-- Footer-->
        <footer class="footer">
            <span class="pull-right">
                Sabri KHEMIRI, Yee LUI et Fadoua OULD LAMARA  | Laurent POLIGNY
            </span>
            Universit√©e Paris Saclay 2016-2017 | Projet LP8 Catalogue 
        </footer>
    </div>

   

    <!-- Vendor scripts -->
    <script src="{{ asset('bundles/company/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/jquery-ui/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/slimScroll/jquery.slimscroll.min.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/jquery-flot/jquery.flot.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/jquery-flot/jquery.flot.resize.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/jquery-flot/jquery.flot.pie.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/flot.curvedlines/curvedLines.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/jquery.flot.spline/index.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/metisMenu/dist/metisMenu.min.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/iCheck/icheck.min.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/peity/jquery.peity.min.js') }}"></script>
    <script src="{{ asset('bundles/company/vendor/sparkline/index.js') }}"></script>

    <!-- App scripts -->
    <script src="{{ asset('bundles/company/scripts/charts.js') }}"></script>
    <script src="{{ asset('bundles/company/scripts/homer.js') }}"></script>

    <!-- Page scripts -->
    {% block js %} {% endblock %}

</body>
</html>
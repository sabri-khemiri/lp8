{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    
    
    <div class="form-group">
        {{ form_label(form.email) }}
        <div class="input-group m-b">
            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <span class="help-block small">{{ form_errors(form.email) }}</span>
    </div>
    
    <div class="form-group">
        {{ form_label(form.username) }}
        <div class="input-group m-b">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
        <span class="help-block small">{{ form_errors(form.username) }}</span>
    </div>
    
    <div class="form-group">
        {{ form_label(form.plainPassword.first) }}
        <div class="input-group m-b">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>
        <span class="help-block small">{{ form_errors(form.plainPassword.first) }}</span>
    </div>
    
    <div class="form-group">
        {{ form_label(form.plainPassword.second) }}
        <div class="input-group m-b">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>
        <span class="help-block small">{{ form_errors(form.plainPassword.second) }}</span>
    </div>
    
    
    <div>
        <input class="btn btn-success" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
        <link rel="stylesheet" href="{{ asset('bundles/company/styles/style.css') }}" />

        <!-- Page styles -->

    </head>

    <body class="blank">
        <div class="color-line"></div>

<form method="POST" class="form-horizontal">
    <div class="row margin-top-20">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="hpanel">
                <div class="panel-body">
                    <h2>Questionnaire :  {{survey.title|capitalize}} <span class="tooltip-demo"><i class="fa fa-info-circle small" data-toggle="tooltip" data-placement="right" title="{{survey.annotation|striptags}}"></i></span></h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="hpanel">
                <div class="panel-body">
                    {% for question in questions %}
                        <h3 class="text-success font-extra-bold ">{{question.wording|capitalize}} <span class="tooltip-demo"><i class="fa fa-info-circle small" data-toggle="tooltip" data-placement="right" title="{{question.annotation}}"></i></span></h3>
                        {% for answer in question.answers %}
                            <div class="radio">
                                <h5> 
                                    <input type="radio" name="{{question.id}}" value="{{answer.id}}" class="i-checks text-big" required="required"> {{answer.wording|capitalize}} 
                                    <span class="tooltip-demo"><i class="fa fa-info-circle small" data-toggle="tooltip" data-placement="right" title="{{answer.annotation}}"></i></span>
                                </h5>
                            </div>
                        {% endfor %}
                        <hr/>
                    {% endfor %}
                    <button class="btn btn-success btn-block" type="submit">Envoyer</button>
                </div>
            </div>
        </div>
    </div>
            
                
    
   

</form>

        <!-- Vendor scripts -->
        <script src="{{ asset('bundles/company/vendor/jquery/dist/jquery.min.js') }}"></script>

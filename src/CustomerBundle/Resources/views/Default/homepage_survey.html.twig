<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <!-- Page title -->
        <title>{% block title %}YSondage{% endblock %}</title>

        <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
        <!--<link rel="shortcut icon" type="image/ico" href="favicon.ico') }}" />-->

        <!-- Vendor styles -->
        <link rel="stylesheet" href="{{ asset('bundles/company/vendor/fontawesome/css/font-awesome.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/company/vendor/metisMenu/dist/metisMenu.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/company/vendor/animate.css/animate.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/company/vendor/bootstrap/dist/css/bootstrap.css') }}" />

        <!-- App styles -->
        <link rel="stylesheet" href="{{ asset('bundles/company/fonts/pe-icon-7-stroke/css/pe-icon-7-stroke.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/company/fonts/pe-icon-7-stroke/css/helper.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/company/styles/style.css') }}" />

        <!-- Page styles -->

    </head>

    <body class="blank">
        <div class="color-line"></div>

        <div class="login-container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center m-b-md">
                        <h1>Bienvenue sur SurveY</h1>

                        <h4>Questionnaire : {{survey.title|capitalize}} </h4>
                        <small>Veuillez entrer les informations afin d'accéder au questionnaire.</small>
                    </div>
                    <div class="hpanel">
                        <div class="panel-body">
                            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                            <div class="form-group">
                                {{ form_label(form.email) }} <span class="text-danger small">* Obligatoire</span> 
                                <div class="input-group m-b">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                </div>    
                                <span class="help-block small">{{ form_errors(form.email) }}</span>
                            </div>
                            <div class="form-group {{ (survey.password is null) ? 'hide' : '' }}">
                                {{ form_label(form.password, 'Mot de passe') }}<span class="text-danger small"> * Obligatoire</span> 
                                <div class="input-group m-b">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                                </div>    
                                <span class="help-block text-danger small">{{ form_errors(form.password) }}</span>
                            </div>

                            <button class="btn btn-success btn-block">Accéder au questionnaire</button><br/>
                            {{ form_end(form) }}
                            <button class="btn btn-primary btn-block" data-toggle="modal" data-target="#myModal"><i class="fa fa-info"></i> Informations sur le questionnaire</button>
                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="color-line"></div>
                                        <div class="modal-header text-center">
                                            <h4 class="modal-title">{{survey.title}}</h4>
                                        </div>
                                        <div class="modal-body">
                                            {{survey.annotation|raw}}
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-danger" data-dismiss="modal">Fermer</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-warning btn-block" href="#"><a class="fa-w" href="mailto:{{survey.userCompany.email}}"><i class="fa fa-envelope"></i> Aide</a></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <span class="">
                        Sabri KHEMIRI, Yee LUI et Fadoua OULD LAMARA  | Laurent POLIGNY
                    </span><br/>
                    Université Paris Saclay 2016-2017 | Projet LP8 Catalogue 
                </div>
            </div>
        </div>


        <!-- Vendor scripts -->
        <script src="{{ asset('bundles/company/vendor/jquery/dist/jquery.min.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/jquery-ui/jquery-ui.min.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/slimScroll/jquery.slimscroll.min.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/jquery-flot/jquery.flot.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/jquery-flot/jquery.flot.resize.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/jquery-flot/jquery.flot.pie.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/flot.curvedlines/curvedLines.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/jquery.flot.spline/index.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/metisMenu/dist/metisMenu.min.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/iCheck/icheck.min.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/peity/jquery.peity.min.js') }}"></script>
        <script src="{{ asset('bundles/company/vendor/sparkline/index.js') }}"></script>

        <!-- App scripts -->
        <script src="{{ asset('bundles/company/scripts/charts.js') }}"></script>
        <script src="{{ asset('bundles/company/scripts/homer.js') }}"></script>

        <!-- Page scripts -->
    </body>
</html>